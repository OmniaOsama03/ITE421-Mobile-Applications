<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sentence">

    <EditText
        android:id="@+id/sentenceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new sentence"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="40dp"/>


    <Button
        android:id="@+id/insertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:layout_below="@id/sentenceInput"
        android:layout_marginLeft="40dp"
        android:onClick="insertSentence"/>


    <Button
        android:id="@+id/selectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_below="@id/sentenceInput"
        android:layout_toRightOf="@id/insertBtn"
        android:layout_marginLeft="20dp"
        android:onClick="selectSentence"/>


    <Button
        android:id="@+id/runBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Game"
        android:layout_below="@id/sentenceInput"
        android:layout_toRightOf="@id/selectBtn"
        android:layout_marginLeft="20dp"
        android:onClick="runGame"/>


    <TextView
        android:id="@+id/selectedSentenceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected sentence will appear here"
        android:layout_below="@id/insertBtn"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>